/* Chat and Messages Styles */

#messages-scroll {
    width: 100%;
    height: 1fr;
    padding: 0 2;
    scrollbar-size: 0 0;
    align: left bottom;
}

ChatMessage {
    width: 100%;
    height: auto;
    padding: 0;
    margin-bottom: 1;
}

#chat-input {
    width: 100%;
    height: 4;
    border: none;
    padding: 0 1;
    color: $success;
}

.system-msg {
    color: $warning;
    text-style: italic;
    padding: 0 1;
    margin-bottom: 1;
}
